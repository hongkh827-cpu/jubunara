<script>
  const items = Array.from(document.querySelectorAll('.item'));
  const countEl = document.getElementById('count');
  const totalEl = document.getElementById('total');
  const payBtn = document.getElementById('payBtn');
  const warnEl = document.getElementById('warn');

  // ✅ 결제 링크(형님이 원하는 곳으로 교체)
  // 예: 토스 결제 링크 / 네이버페이 결제 링크 / 카카오페이 링크
  const PAYMENT_LINK = "https://example.com/pay"; // ← 여기만 바꾸세요

  function formatWon(n){
    return n.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
  }

  function recalc(){
    const checked = items.filter(x => x.checked);
    const count = checked.length;

    let total = 0;
    checked.forEach(x => total += Number(x.dataset.price || 0));

    countEl.textContent = count;
    totalEl.textContent = formatWon(total);

    payBtn.disabled = (count === 0);
    warnEl.style.display = "none";
  }

  items.forEach(cb => {
    cb.addEventListener('change', (e) => {
      const checkedCount = items.filter(x => x.checked).length;

      if (checkedCount > 3){
        e.target.checked = false;
        warnEl.style.display = "block";
      }
      recalc();
    });
  });

  payBtn.addEventListener('click', () => {
    const checked = items.filter(x => x.checked);
    const names = checked.map(x => x.dataset.name).join(", ");
    const total = checked.reduce((s,x)=>s+Number(x.dataset.price||0),0);

    // 결제 링크로 이동하면서 선택 정보도 같이 넘김(선택사항)
    const url = new URL(PAYMENT_LINK);
    url.searchParams.set("items", names);
    url.searchParams.set("total", total);

    window.location.href = url.toString();
  });

  recalc();
</script>
